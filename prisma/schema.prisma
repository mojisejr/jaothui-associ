// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  farmName      String?
  wallet        String    @unique
  address       String    @db.Text
  lat           Float?
  lon           Float?
  role          String    @default("USER")
  lineId        String?   @unique @db.Text
  tel           Int?      @unique
  payment       Payment[]
  active        Boolean   @default(false)
  approved      String[]  @default([])
  approvedCount Int       @default(0)
  createdAt     DateTime  @default(now())
  updateAt      DateTime  @updatedAt
}

model Payment {
  id            Int       @id @default(autoincrement())
  wallet        String
  isLifeTime    Boolean   @default(false)
  active        Boolean   @default(true)
  start         DateTime  @default(now())
  end           DateTime?
  slipUrl       String    @db.Text
  approver      String[]  @default([])
  approvedCount Int       @default(0)
  rejector      String[]  @default([])
  rejectedCount Int       @default(0)
  User          User?     @relation(fields: [userId], references: [id])
  userId        Int?
  currentStep   Int       @default(0)
}

model Pedigree {
  microchip String    @id @unique
  name      String
  certNo    String?
  birthday  DateTime
  sex       String
  motherId  String?
  fatherId  String?
  origin    String?   @default("thai")
  height    Int?
  color     String
  issueAt   DateTime?
}

model Advertisements {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  imageUrl    String?
  active      Boolean @default(true)
}
